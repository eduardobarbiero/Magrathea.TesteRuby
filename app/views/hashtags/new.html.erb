<div class="container">
    <div class="row">				
        <div class="col mt-3">
            <div class="row mt-3">
                <div class="col">
                    <h1>Nova Hashtag</h1>                        
                </div>
            </div>   
            <div class="row mt-3">
                <div class="col">
                    <%= form_with(model: @hashtag, local: true) do |form| %>
                        <%= render 'form', form: form %>
                        <div class="row mt-3">
                            <div class="col">	
                                <%= form.submit 'Criar', class: 'btn btn-success btn-md float-left' %>                 
                                <%= link_to 'Cancelar', hashtags_path, class: "btn btn-default btn-md float-right" %>                           
                            </div>    
                        </div>    
                    <% end %>
                </div>
            </div>        
        </div>
    </div>
</div>
